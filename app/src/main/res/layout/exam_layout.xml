<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_exam"
        app:cardBackgroundColor="#eee"
        app:contentPadding="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        app:cardUseCompatPadding="true"
        android:elevation="5dp"
        app:cardCornerRadius="5dp">

<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Row 2 with 3 columns -->

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/TextView_date"
            android:text="Year"
            android:textStyle="bold"
            android:layout_weight="1"
            android:background="#dcdcdc"
            android:textColor="#000000"
            android:padding="20dip"
            android:gravity="center"/>

        <TextView
            android:id="@+id/TextView_miles"
            android:text="Exam Type"
            android:layout_weight="1"
            android:background="#d3d3d3"
            android:textColor="#000000"
            android:padding="20dip"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/TextView_calories"
            android:text="Term"
            android:textStyle="bold"
            android:layout_weight="1"
            android:background="#cac9c9"
            android:textColor="#000000"
            android:padding="20dip"
            android:gravity="center"/>

    </TableRow>

    <!-- Row 3 with 3 columns -->


    <TableRow
        android:id="@+id/tableRow2"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:text=""
            android:id="@+id/exam_year"
            android:layout_weight="1"
            android:background="#dcdcdc"
            android:textColor="#000000"
            android:padding="20dip"
            android:gravity="center"/>

        <TextView
            android:text=""
            android:id="@+id/exam_type"
            android:layout_weight="1"
            android:background="#d3d3d3"
            android:textColor="#000000"
            android:padding="20dip"
            android:gravity="center"/>

        <TextView

            android:layout_weight="1"
            android:id="@+id/exam_term"
            android:background="#cac9c9"
            android:textColor="#000000"
            android:padding="20dip"
            android:gravity="center"/>

    </TableRow>

    <TableRow
        android:id="@+id/tableHead"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:text="Subjects"
            android:layout_weight="1"
            android:background="#dcdcdc"
            android:textColor="#000000"
            android:padding="20dip"
            android:gravity="center"/>

        <TextView
            android:text="Marks"
            android:layout_weight="1"
            android:background="#d3d3d3"
            android:textColor="#000000"
            android:padding="20dip"
            android:gravity="center"/>

        <TextView
            android:text="Comment"
            android:layout_weight="1"
            android:background="#cac9c9"
            android:textColor="#000000"
            android:padding="20dip"
            android:gravity="center"/>

    </TableRow>
    <TableRow
        android:id="@+id/tableRowDetails"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:text="Maths"
            android:layout_weight="1"
            android:background="#dcdcdc"
            android:textColor="#000000"
            android:padding="20dip"
            android:gravity="center"/>

        <TextView
            android:text=""
            android:id="@+id/maths"
            android:layout_weight="1"
            android:background="#d3d3d3"
            android:textColor="#000000"
            android:padding="20dip"
            android:gravity="center"/>

        <TextView

            android:layout_weight="1"
            android:background="#cac9c9"
            android:textColor="#000000"
            android:padding="20dip"
            android:gravity="center"/>

    </TableRow>
    <TableRow
        android:id="@+id/tableRowEnglish"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:text="English"
            android:layout_weight="1"
            android:background="#dcdcdc"
            android:textColor="#000000"
            android:padding="20dip"
            android:gravity="center"/>

        <TextView
            android:text=""
            android:id="@+id/english"
            android:layout_weight="1"
            android:background="#d3d3d3"
            android:textColor="#000000"
            android:padding="20dip"
            android:gravity="center"/>

        <TextView

            android:layout_weight="1"
            android:background="#cac9c9"
            android:textColor="#000000"
            android:padding="20dip"
            android:gravity="center"/>

    </TableRow>
    <TableRow
        android:id="@+id/tableRowKisw"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:text="Kiswahili"
            android:layout_weight="1"
            android:background="#dcdcdc"
            android:textColor="#000000"
            android:padding="20dip"
            android:gravity="center"/>

        <TextView
            android:text=""
            android:id="@+id/kisw"
            android:layout_weight="1"
            android:background="#d3d3d3"
            android:textColor="#000000"
            android:padding="20dip"
            android:gravity="center"/>

        <TextView

            android:layout_weight="1"
            android:background="#cac9c9"
            android:textColor="#000000"
            android:padding="20dip"
            android:gravity="center"/>

    </TableRow>
    <TableRow
        android:id="@+id/tableRowScience"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:text="Science"
            android:layout_weight="1"
            android:background="#dcdcdc"
            android:textColor="#000000"
            android:padding="20dip"
            android:gravity="center"/>

        <TextView
            android:text=""
            android:id="@+id/scie"
            android:layout_weight="1"
            android:background="#d3d3d3"
            android:textColor="#000000"
            android:padding="20dip"
            android:gravity="center"/>

        <TextView

            android:layout_weight="1"
            android:background="#cac9c9"
            android:textColor="#000000"
            android:padding="20dip"
            android:gravity="center"/>

    </TableRow>
    <TableRow
        android:id="@+id/tableRowSst"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:text="Social Studies"
            android:layout_weight="1"
            android:background="#dcdcdc"
            android:textColor="#000000"
            android:padding="20dip"
            android:gravity="center"/>

        <TextView
            android:text=""
            android:id="@+id/sst"
            android:layout_weight="1"
            android:background="#d3d3d3"
            android:textColor="#000000"
            android:padding="20dip"
            android:gravity="center"/>

        <TextView

            android:layout_weight="1"
            android:background="#cac9c9"
            android:textColor="#000000"
            android:padding="20dip"
            android:gravity="center"/>

    </TableRow>
    <TableRow
        android:id="@+id/tableRowComp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:text="Computer"
            android:layout_weight="1"
            android:background="#dcdcdc"
            android:textColor="#000000"
            android:padding="20dip"
            android:gravity="center"/>

        <TextView
            android:text=""
            android:layout_weight="1"
            android:id="@+id/comp"
            android:background="#d3d3d3"
            android:textColor="#000000"
            android:padding="20dip"
            android:gravity="center"/>

        <TextView

            android:layout_weight="1"

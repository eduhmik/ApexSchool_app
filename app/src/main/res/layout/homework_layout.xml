<?xml version="1.0" encoding="utf-8"?>
 <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_exam"
        app:cardBackgroundColor="#eee"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:contentPadding="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        app:cardUseCompatPadding="true"
        android:elevation="5dp"
        app:cardCornerRadius="5dp">
    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Row 2 with 3 columns -->
        <TableRow
            android:id="@+id/tableRow1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:id="@+id/TextView_date"
                android:text="Date"
                android:layout_weight="1"
                android:background="#dcdcdc"
                android:textColor="#000000"
                android:padding="20dip"
                android:gravity="center"/>

            <TextView
                android:id="@+id/TextView_miles"
                android:text="Homework"
                android:layout_weight="1"
                android:background="#d3d3d3"
                android:textColor="#000000"
                android:padding="20dip"
                android:gravity="center"/>

            <TextView
                android:id="@+id/TextView_calories"
                android:text="Term"
                android:layout_weight="1"
                android:background="#cac9c9"
                android:textColor="#000000"
                android:padding="20dip"
                android:gravity="center"/>

        </TableRow>

        <!-- Row 3 with 3 columns -->


        <TableRow
            android:id="@+id/tableRow2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:text=""
                android:id="@+id/hw_date"
                android:layout_weight="1"
                android:background="#dcdcdc"
                android:textColor="#000000"
                android:padding="20dip"
                android:gravity="center"/>

            <TextView
                android:text=""
                android:layout_weight="1"
                android:background="#d3d3d3"
                android:textColor="#000000"
                android:padding="20dip"
                android:gravity="center"/>

            <TextView

                android:layout_weight="1"
                android:background="#cac9c9"
                android:textColor="#000000"
                android:padding="20dip"
                android:gravity="center"/>

        </TableRow>

        <TableRow
            android:id="@+id/tableHead"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:text="Subjects"
                android:layout_weight="1"
                android:background="#dcdcdc"
                android:textColor="#000000"
                android:padding="20dip"
                android:gravity="center"/>

            <TextView
                android:text="Work To Do"
                android:layout_weight="1"
                android:background="#d3d3d3"
                android:textColor="#000000"
                android:padding="20dip"
                android:gravity="center"/>

            <TextView
                android:text="Comment"
                android:layout_weight="1"
                android:background="#cac9c9"
                android:textColor="#000000"
                android:padding="20dip"
                android:gravity="center"/>

        </TableRow>
        <TableRow
            android:id="@+id/tableRowDetails"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:text="Maths"
                android:layout_weight="1"
                android:background="#dcdcdc"
                android:textColor="#000000"
                android:padding="20dip"
                android:gravity="center"/>

            <TextView
                android:text=""
                android:id="@+id/hw_maths"
                android:layout_weight="1"
                android:background="#d3d3d3"
                android:textColor="#000000"
                android:padding="20dip"
                android:gravity="center"/>

            <TextView

                android:layout_weight="1"
                android:background="#cac9c9"
                android:textColor="#000000"
                android:padding="20dip"
                android:gravity="center"/>

        </TableRow>
        <TableRow
            android:id="@+id/tableRowEnglish"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:text="English"
                android:layout_weight="1"
                android:background="#dcdcdc"
                android:textColor="#000000"
                android:padding="20dip"
                android:gravity="center"/>

            <TextView
                android:text=""
                android:id="@+id/hw_english"
                android:layout_weight="1"
                android:background="#d3d3d3"
                android:textColor="#000000"
                android:padding="20dip"
                android:gravity="center"/>

            <TextView

                android:layout_weight="1"
                android:background="#cac9c9"
                android:textColor="#000000"
                android:padding="20dip"
                android:gravity="center"/>

        </TableRow>
        <TableRow
            android:id="@+id/tableRowKisw"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:text="Kiswahili"
                android:layout_weight="1"
                android:background="#dcdcdc"
                android:textColor="#000000"
                android:padding="20dip"
                android:gravity="center"/>

            <TextView
                android:text=""
                android:id="@+id/hw_kisw"
                android:layout_weight="1"
                android:background="#d3d3d3"
                android:textColor="#000000"
                android:padding="20dip"
                android:gravity="center"/>

            <TextView

                android:layout_weight="1"
                android:background="#cac9c9"
                android:textColor="#000000"
                android:padding="20dip"
                android:gravity="center"/>

        </TableRow>
        <TableRow
            android:id="@+id/tableRowScience"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:text="Science"
                android:layout_weight="1"
                android:background="#dcdcdc"
                android:textColor="#000000"
                android:padding="20dip"
                android:gravity="center"/>

            <TextView
                android:text=""
                android:id="@+id/hw_scie"
                android:layout_weight="1"
                android:background="#d3d3d3"
                android:textColor="#000000"
                android:padding="20dip"
                android:gravity="center"/>

            <TextView

                android:layout_weight="1"
                android:background="#cac9c9"
                android:textColor="#000000"
                android:padding="20dip"
                android:gravity="center"/>

        </TableRow>
        <TableRow
            android:id="@+id/tableRowSst"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:text="Social Studies"
                android:layout_weight="1"
                android:background="#dcdcdc"
                android:textColor="#000000"
                android:padding="20dip"
                android:gravity="center"/>

            <TextView
                android:text=""
                android:id="@+id/hw_sst"
                android:layout_weight="1"
                android:background="#d3d3d3"
                android:textColor="#000000"
                android:padding="20dip"
                android:gravity="center"/>

            <TextView

                android:layout_weight="1"
                android:background="#cac9c9"
                android:textColor="#000000"
                android:padding="20dip"
                android:gravity="center"/>

        </TableRow>
        <TableRow
            android:id="@+id/tableRowComp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:text="Computer"
                android:layout_weight="1"
                android:background="#dcdcdc"
                android:textColor="#000000"
                android:padding="20dip"
                android:gravity="center"/>

            <TextView
                android:text=""
                android:id="@+id/hw_comp"
                android:layout_weight="1"
                android:background="#d3d3d3"
                android:textColor="#000000"
                android:padding="20dip"
                android:gravity="center"/>

            <TextView

                android:layout_weight="1"
                android:background="#cac9c9"
                android:textColor="#000000"
                android:padding="20dip"
                android:gravity="center"/>

        </TableRow>

        <TableRow
            android:id="@+id/tableTtl"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:text="Done"
                android:layout_weight="1"
                android:background="#dcdcdc"
                android:textColor="#000000"
                android:padding="20dip"
                android:gravity="center"/>

            <TextView
                android:text=""
                android:id="@+id/hw_done"
                android:layout_weight="1"
                android:background="#d3d3d3"
                android:textColor="#000000"
                android:padding="20dip"
                android:gravity="center"/>

            <TextView

                android:layout_weight="1"
                android:background="#cac9c9"
                android:textColor="#000000"
                android:padding="20dip"
                android:gravity="center"/>

        </TableRow>
    </TableLayout>
</android.support.v7.widget.CardView>

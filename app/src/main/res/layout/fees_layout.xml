<?xml version="1.0" encoding="utf-8"?>
 <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_exam"
        app:cardBackgroundColor="#eee"
        app:contentPadding="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        app:cardUseCompatPadding="true"
        android:elevation="5dp"
        app:cardCornerRadius="5dp">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- Row 2 with 3 columns -->
    <TableRow
        android:id="@+id/tableHead"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/TextView_date"
            android:text="Year"
            android:layout_weight="1"
            android:background="#dcdcdc"
            android:textColor="#000000"
            android:padding="20dip"
            android:gravity="center"/>

        <TextView
            android:id="@+id/TextView_miles"
            android:text="Fees"
            android:layout_weight="1"
            android:background="#d3d3d3"
            android:textColor="#000000"
            android:padding="20dip"
            android:gravity="center"/>

        <TextView
            android:id="@+id/TextView_calories"
            android:text="Term"
            android:layout_weight="1"
            android:background="#cac9c9"
            android:textColor="#000000"
            android:padding="20dip"
            android:gravity="center"/>

    </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:text=""
                android:id="@+id/fees_year"
                android:layout_weight="1"
                android:background="#dcdcdc"
                android:textColor="#000000"
                android:padding="20dip"
                android:gravity="center"/>

            <TextView
                android:text=""
                android:id="@+id/fees_class"
                android:layout_weight="1"
                android:background="#d3d3d3"
                android:textColor="#000000"
                android:padding="20dip"
                android:gravity="center"/>

            <TextView

                android:layout_weight="1"
                android:id="@+id/exam_term"
                android:background="#cac9c9"
                android:textColor="#000000"
                android:padding="20dip"
                android:gravity="center"/>

        </TableRow>


        <TableRow
            android:id="@+id/tableFees"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:id="@+id/TextView_bal_fees"
                android:text="Term Fees"
                android:layout_weight="1"
                android:background="#dcdcdc"
                android:textColor="#000000"
                android:padding="20dip"
                android:gravity="center"/>

            <TextView
                android:id="@+id/TextView_amt"
                android:text="15,000"
                android:layout_weight="1"
                android:background="#d3d3d3"
                android:textColor="#000000"
                android:padding="20dip"
                android:gravity="center"/>

            <TextView
                android:id="@+id/TextView_term1"
                android:text=""
                android:layout_weight="1"
                android:background="#cac9c9"
                android:textColor="#000000"
                android:padding="20dip"
                android:gravity="center"/>
        </TableRow>

        <TableRow
            android:id="@+id/tablepPaid"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:id="@+id/TextView_paid"
                android:text="Amount Paid"
                android:layout_weight="1"
                android:background="#dcdcdc"
                android:textColor="#000000"
                android:padding="20dip"
                android:gravity="center"/>

            <TextView
                android:id="@+id/TextView_amt_paid"
                android:text="10,000"
                android:layout_weight="1"
                android:background="#d3d3d3"
                android:textColor="#000000"
                android:padding="20dip"
                android:gravity="center"/>

            <TextView
                android:id="@+id/term"
                android:text=""
                android:layout_weight="1"
                android:background="#cac9c9"
                android:textColor="#000000"
                android:padding="20dip"
                android:gravity="center"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:id="@+id/TextView_bal"
                android:text="Amount Balance"
                android:layout_weight="1"
                android:background="#dcdcdc"
                android:textColor="#000000"
                android:padding="20dip"
                android:gravity="center"/>

            <TextView
                android:id="@+id/TextView_amt_bal"
                android:text="5,000"
                android:layout_weight="1"
                android:background="#d3d3d3"
                android:textColor="#000000"
                android:padding="20dip"
                android:gravity="center"/>

            <TextView
                android:id="@+id/TextView_term_bal"
                android:text=""
                android:layout_weight="1"
                android:background="#cac9c9"
                android:textColor="#000000"
                android:padding="20dip"
                android:gravity="center"/>

        </TableRow>
    </TableLayout>
</android.support.v7.widget.CardView>
